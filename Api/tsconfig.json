{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "*.ts",
    "package.json",
    "index.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "src/node_modules"
  ]
}
